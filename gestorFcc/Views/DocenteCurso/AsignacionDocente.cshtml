@{
    ViewData["Title"] = "Asignar Curso a Docente";
}

<h1> Asignar Curso a Docente</h1>

<form asp-action="AsignarCurso" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="control-label">Seleccionar Docente</label>
                <select name="id_docente" class="form-control" required>
                    <option value=""> Selecciona docente </option>
                    @foreach (var docente in ViewBag.Docente)
                    {
                        <option value="@docente.id_docente"> - @docente.nombre - @docente.apellidoPaterno</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="control-label">Seleccionar Curso</label>
                <select name="id_curso" class="form-control" required>
                    <option value=""> Seleccione Curso </option>
                    @foreach (var curso in ViewBag.Curso)
                    {
                        <option value="@curso.id_curso">@curso.id_curso - @curso.nombre</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group mb-3">
        <label class="control-label">Periodo:</label>
        <input type="text" name="periodo" class="form-control" placeholder="Otoño / Primavera" required />
    </div>

    <button type="submit" class="btn btn-primary"> Asignar Curso</button>
    <a asp-controller="Docente" asp-action="Index" class="btn btn-secondary">Volver a Lista de Alumnos</a>
    <a asp-action="Asignaciones" class="btn btn-secondary">Ver Asignaciones</a>

</form>