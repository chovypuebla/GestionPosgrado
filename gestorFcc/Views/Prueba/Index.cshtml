@{
    ViewData["Title"] = "prueba";
}

<h1>prueba</h1>

<div class="alert alert-success">
    <h4>@ViewBag.Conexion</h4>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <h4>@ViewBag.Error</h4>
    </div>
}
else
{
    <div class="alert alert-info">
        <p><strong>Total Coordinadores</strong>@ViewBag.TotalCoordinadores</p>
        <p><strong>@ViewBag.Tablas</strong></p>
        <p><strong>Entidades detectadas:</strong>@ViewBag.Entidades</p>

    </div>
}

<p>
    Si ves mensajes positivos, entity framework está funcionando correctamente.
</p>
