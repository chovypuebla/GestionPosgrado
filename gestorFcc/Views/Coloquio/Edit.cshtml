@model gestorFcc.Data.Entidades.Coloquio
@{
    ViewData["Title"] = "Editar Coloquio";
}

<h1>✏️ Editar Alumno</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" id="EditColoquio">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="id_coloquio" class="control-label">ID</label>
                <input asp-for="id_coloquio" class="form-control" placeholder="12345" />
                <span asp-validation-for="id_coloquio" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="titulo" class="control-label">Titulo </label>
                <input asp-for="titulo" class="form-control" placeholder="Ingrese el nombre" />
                <span asp-validation-for="titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="fecha" class="control-label">Fecha</label>
                <input asp-for="fecha" class="form-control" placeholder="Ingrese el apellido paterno" />
                <span asp-validation-for="fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="lugar" class="control-label">Lugar</label>
                <input asp-for="lugar" class="form-control" placeholder="Ingrese el apellido materno" />
                <span asp-validation-for="lugar" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="hora" class="control-label">Hora</label>
                <input asp-for="hora" class="form-control" placeholder="Hora de inicio" />
                <span asp-validation-for="hora" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">← Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/validarForm.js"></script>
    <script>
        //Incializar validación
        inicializarValidacionFormulario(#EditColoquio);
    </script>
}